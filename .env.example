# Gold API Configuration
GOLD_API_KEY=your_gold_api_key_here

# Application Authentication (Required)
# Set these to your desired login credentials
APP_USERNAME=your_username_here
APP_PASSWORD=your_secure_password_here

# Flask Secret Key (for session security)
# Generate a secure key using: python -c "import secrets; print(secrets.token_hex(24))"
SECRET_KEY=your_secret_key_here

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
# Get your chat ID by messaging @userinfobot on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Telegram Webhook URL (for bot commands)
# Set this to your server URL where the Flask app is accessible
# Example: https://your-domain.com/telegram-webhook
WEBHOOK_URL=https://your-domain.com/telegram-webhook

# Telegram Webhook Secret (for request verification)
# Generate a secure secret and set it on your bot webhook with Telegram API
# Without this, webhook requests are not verified (less secure)
# To set: Use Telegram Bot API setWebhook with secret_token parameter
# Telegram will send X-Telegram-Bot-API-Secret-Token header to your webhook
# Example: TELEGRAM_WEBHOOK_SECRET=your_secret_token_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# PayPal FX conversion spread (as decimal). Commonly ~0.03 or 0.04 depending on conversion type.
# Example: 0.03 = 3% worse than base FX rate.
PAYPAL_CONVERSION_SPREAD_PCT=0.03
